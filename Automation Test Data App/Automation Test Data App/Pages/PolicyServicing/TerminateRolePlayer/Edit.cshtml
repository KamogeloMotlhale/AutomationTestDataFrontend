@page
@model Automation_Test_Data_App.Pages.PolicyServicing.TerminateRolePlayer.EditModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit Role</h2>

<form method="POST">

	<input type="hidden" name="id" value="@Model.Terminateinfo.id">

	


	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">RoleType</label>
		<div class="col-sm-6">
		<select id='RoleType' class="form-control" name="RoleType" value="@Model.Terminateinfo.RoleType">
		<option value=""></option>
		<option value="Child">Child</option>
		<option value="Parent">Parent</option>
		<option value="Wider Family Member">Wider Family Member</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">ID_no</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="ID" value="@Model.Terminateinfo.id">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Scenario_ID</label>
		<div class="col-sm-6">
			<input disabled type="text" class="form-control" name="Scenario_ID" value="@Model.Terminateinfo.Scenario_ID">	
		</div>
	</div>

	

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-2 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-2 d-grid">
			
			<a class="btn btn-danger" href="/PolicyServicing/TerminateRolePlayer/Delete?scenarioid=@Model.Terminateinfo.Scenario_ID" title="Delete"  onclick="return confirm('Are you sure you want to delete this item')">Delete</a>
		</div>
		<div class="col-sm-2 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/" role="button">Cancel</a>
		</div>
	</div>

</form>		