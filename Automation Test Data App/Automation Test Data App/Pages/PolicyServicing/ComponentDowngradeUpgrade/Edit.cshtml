@page
@model Automation_Test_Data_App.Pages.PolicyServicing.ComponentDowngradeUpgrade.EditModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit Component</h2>

<form method="POST">

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Scenario ID</label>
		<div class="col-sm-6">
			<input class="form-control" disabled name="scenarioid" value="@Model.DowngradeInfo.id">
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Method</label>
		<div class="col-sm-6">
		<select id='Component' class="form-control" name="method" value="@Model.DowngradeInfo.Method">

		<option value="Downgrade">Downgrade</option>
		<option value="Upgrade">Upgrade</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Cover_Amount</label>
		<div class="col-sm-6">
		<select id='Cover_Amount' class="form-control" name="sumAssured" value="@Model.DowngradeInfo.Cover_Amount">
		<option value=""></option>
	
		<option selected value="5000">5000</option>
		<option value="7500">7500</option>
		<option value="10000">10000</option>
		<option value="15000">15000</option>
		<option value="20000">20000</option>
		<option value="30000">30000</option>
		<option value="40000">40000</option>
		<option value="50000">50000</option>
		<option value="60000">60000</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Component</label>
		<div class="col-sm-6">
		<select id='Component' class="form-control" name="component" value="@Model.DowngradeInfo.Method">
		<option value=""></option>
		<option selected value="Prinicpal Life Assured "> Prinicpal Life Assured </option>
		<option value="Wider Family Member">Wider Family Member </option>
		</select>
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Component ID</label>
		<div class="col-sm-6">
			<input class="form-control" name="compId" value="@Model.DowngradeInfo.comID">
		</div>
	</div>
	

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-2 d-grid">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
		<div class="col-sm-2 d-grid">
			
			<a class="btn btn-danger" href="/PolicyServicing/ComponentDowngradeUpgrade/Delete?scenarioid=@Model.DowngradeInfo.id" title="Delete"  onclick="return confirm('Are you sure you want to delete this item')">Delete</a>
		</div>
		<div class="col-sm-2 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/EditScenario?scenarioid=@Model.DowngradeInfo.id" role="button">Cancel</a>
		</div>
	</div>

</form>		