@page
@model Automation_Test_Data_App.Pages.PolicyServicing.ComponentDowngradeUpgrade.EditModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit Component</h2>

<form method="POST">

	<input type="hidden" name="id" value="@Model.DowngradeInfo.id">

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Date</label>
		<div class="col-sm-6">
		<input type="date"  required pattern="\d{4}-\d{2}-\d{2}" class="form-control" name="Date" value="@Model.DowngradeInfo.Date">	
		</div>
	</div>


	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Component</label>
		<div class="col-sm-6">
		<select id='Component' class="form-control" name="Component" value="@Model.DowngradeInfo.Method">
		<option value=""></option>
		<option value="Downgrade">Downgrade</option>
		<option value="Upgrade">Upgrade</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Cover_Amount</label>
		<div class="col-sm-6">
		<select id='id' class="form-control" name="Cover_Amount" value="@Model.DowngradeInfo.Cover_Amount">
		<option value=""></option>
		<option value="5000">5000</option>
		<option value="7500">7500</option>
		<option value="10000">10000</option>
		<option value="15000">15000</option>
		<option value="20000">20000</option>
		<option value="30000">30000</option>
		<option value="40000">40000</option>
		<option value="50000">50000</option>
		<option value="60000">60000</option>
		</select>
		</div>
	</div>



	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/ComponentDowngradeUpgrade" role="button">Cancel</a>
		</div>
	</div>

</form>		