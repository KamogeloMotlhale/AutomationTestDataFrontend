@page
@model Automation_Test_Data_App.Pages.PolicyServicing.CreateModel
@{
}
@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
	}
<br/>
<h2>Create Policy Servicing Scenario</h2>



<form method="POST">
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Policy Ref</label>
		<div class="col-sm-6">
			<input type="text" class="form-control"  name="policyno" value="@Model.PScenarioInfo.policyNo">	
		</div>
	</div>
		<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Expected Results</label>
		<div class="col-sm-6">
		<select id='Method' class="form-control" name="expResults" value="@Model.PScenarioInfo.expectedResults">
		<option value="Pass">Pass</option>
		<option value="Fail">Fail</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Function</label>
		<div class="col-sm-6">
		<select id='Method' class="form-control" name="function" value="@Model.PScenarioInfo.functionID">
		<option value=""></option>
		
		@foreach (var item in Model.funcList)
		{
			<option value=@item.id>@item.name</option>
		}

		</select>
		</div>
	</div>

	

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/" role="button">Cancel</a>
		</div>
	</div>

</form>		
		