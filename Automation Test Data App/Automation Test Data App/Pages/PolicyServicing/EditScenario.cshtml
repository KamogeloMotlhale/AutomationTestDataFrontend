@page
@model Automation_Test_Data_App.Pages.PolicyServicing.EditScenarioModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit scenrio details and test data for @Model.pScenario.functionName</h2>

<form method="POST">

	<input type="hidden" name="id" value="@Model.pScenario.id">

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">PolicyNo</label>
		<div class="col-sm-6">
		<input type="text" value="@Model.pScenario.policyNo"  class="form-control" name="policyNo">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Expected Results</label>
		<div class="col-sm-6">
		<select disabled=@{Model.pScenario.testDate?} id='Component' class="form-control" name="expResutlts" value="@Model.pScenario.expectedResults">
		<option value=""></option>
		<option selected value="Pass">Pass</option>
		<option value="Fail">Fail</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Function</label>
		<div class="col-sm-6">
		<select id='Method' class="form-control" name="function" value="@Model.pScenario.functionID">
		<option value=""></option>
		
		@foreach (var item in Model.funcList)
		{
			@if (@item.id == Model.pScenario.functionID)
			{
				<option selected value=@item.id>@item.name</option>
				
			}
			else{
				<option value=@item.id>@item.name</option>
			}
		}

		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Test Results</label>
		<div class="col-sm-6">
		<input type="text" disabled value="@Model.pScenario.testResutls"  class="form-control" name="policyNo">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Comments</label>
		<div class="col-sm-6">
		 <textarea disabled class="form-control" name="comments" rows="3"></textarea>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Test date</label>
		<div class="col-sm-6">
		<input type="text" disabled value="@Model.pScenario.testDate"  class="form-control" name="testDate">	
		</div>
	</div>

	
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Product name</label>
		<div class="col-sm-6">
		<input type="text" disabled value="@Model.pScenario.productName"  class="form-control" name="testDate">	
		</div>
	</div>
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Date  Created</label>
		<div class="col-sm-6">
		<input type="text" disabled value="@Model.pScenario.dateCreated"  class="form-control" name="testDate">	
		</div>
	</div>



	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/ComponentDowngradeUpgrade" role="button">Cancel</a>
		</div>
	</div>

</form>		