@page
@model Automation_Test_Data_App.Pages.PolicyServicing.EditScenarioModel


@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit scenrio details and test data for @Model.pScenarioInfo.functionName</h2>
<br />
<h4>Scenario details</h4>
<form method="POST">

	<input type="hidden" name="id" value="@Model.pScenarioInfo.id">

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">PolicyNo</label>
		<div class="col-sm-6">
		
		<input type="text" value="@Model.pScenarioInfo.policyNo"  class="form-control" name="policyNo">	

		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Expected Results</label>
		<div class="col-sm-6">
		<select  id='Component' class="form-control" name="expResutlts" value="@Model.pScenarioInfo.expectedResults">
		<option value=""></option>
		<option selected value="Pass">Pass</option>
		<option value="Fail">Fail</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Function</label>
		<div class="col-sm-6">
		<select id='Method' class="form-control" name="function" value="@Model.pScenarioInfo.functionID">
		<option value=""></option>
		
		@foreach (var item in Model.funcList)
		{
			@if (@item.id == Model.pScenarioInfo.functionID)
			{
				<option selected value=@item.id>@item.name</option>
				
			}
			else{
				<option value=@item.id>@item.name</option>
			}
		}

		</select>
		</div>
	</div>
