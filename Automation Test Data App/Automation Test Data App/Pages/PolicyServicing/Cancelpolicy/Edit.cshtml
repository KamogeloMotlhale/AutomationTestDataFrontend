@page
@model Automation_Test_Data_App.Pages.PolicyServicing.Cancelpolicy.EditModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Update Cancel Policy Component</h2>

<form method="POST">

	<input type="hidden" name="id" value="@Model.CancelpolicyInfo.id">

		<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Scenario ID</label>
		<div class="col-sm-6">
			<input readonly type="text" class="form-control" name="PolicyNo"   value="@Model.CancelpolicyInfo.id"  minlength="10" maxlength="10">	
		</div>
	</div>

	
	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Termination Reason</label>
		<div class="col-sm-6">
		<select id='Reason' class="form-control" name="TerminationReason" value="@Model.CancelpolicyInfo.TerminationReason">
		<option value="Affordability">Affordability</option>
		<option value="Client did disclose">Client did disclose</option>
		<option value="Client no longer interested">Client no longer interested</option>
		<option value="Cooling off period">Cooling off period</option>
		<option value="Death of Policy Holder">Death of Policy Holder</option>
		<option value="Duplicate Policy">Duplicate Policy</option>
		<option value="Fraud">Fraud</option>
		<option value="Fraud Allegation">Fraud Allegation</option>
		<option value="Fraud Disproved">Fraud Disproved</option>
		<option value="Fraud Investigation Inconclusive">Fraud Investigation Inconclusive</option>
		<option value="Incorrect Details">Incorrect Details</option>
		<option value="Late/Early Deduction">Late/Early Deduction</option>
		<option value="Money Back Guarantee">Money Back Guarantee</option>
		<option value="No Follow Up">No Follow Up</option>
		<option value="No Policy Document">No Policy Document</option>
		<option value="No Reason Given">No Reason Given</option>
		<option value="Not as Agreed">Not as Agreed</option>
		<option value="Not happy with service">Not happy with service</option>
		<option value="Replacement Of Policy">Replacement Of Policy</option>
		<option value="Wrong Deduction">Wrong Deduction</option>
		</select>
		</div>
	</div>



	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-2 d-grid">
			<button type="submit" class="btn btn-primary">Update</button>
		</div>
		<div class="col-sm-2 d-grid">
			
			<a class="btn btn-danger" href="/PolicyServicing/CancelPolicy/Delete?scenarioid=@Model.CancelpolicyInfo.id" title="Delete"  onclick="return confirm('Are you sure you want to delete this item')">Delete</a>
		</div>
		<div class="col-sm-2 d-grid">
			<a class="btn btn-outline-primary" href="/PolicyServicing/" role="button">Cancel</a>
		</div>
	</div>

</form>		