@page
@model Automation_Test_Data_App.Pages.PolicyServicing.Cancelpolicy.CreateModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
	}
<br>
<h2>Reinstate Policy</h2>


<form method="POST">
	

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Policy Number</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="PolicyNo" value="@Model.CancelpolicyInfo.PolicyNo" minlength="10" maxlength="10">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Termination Reason</label>
		<div class="col-sm-6">
		<select id='TerminationReason' class="form-control" name="TerminationReason" value="@Model.CancelpolicyInfo.TerminationReason">
		<option value=""></option>
		<option value="ReinstateReason1">Back dated claim</option>
	   <option value="ReinstateReason2">Bank details updated, not activated</option>
	   <option value="ReinstateReason3">Client request</option>
	   <option value="ReinstateReason4">Conservation</option>
	   <option value="ReinstateReason5">Due to ill health</option>
	   <option value="ReinstateReason6">Error on collections</option>
	   <option value="ReinstateReason8">Cooling off period</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Reinstatement Date</label>
		<div class="col-sm-6">
		<input type="date"  required pattern="\d{4}-\d{2}-\d{2}" class="form-control" name="TerminationDate" value="@Model.CancelpolicyInfo.TerminationDate">	
		</div>
	</div>


	


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/policyServicing/Cancelpolicy" role="button">Cancel</a>
		</div>
	</div>

</form>		
		
