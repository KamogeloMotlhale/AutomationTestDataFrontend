@page
@model Automation_Test_Data_App.Pages.PolicyServicing.CollectionMethodData.EditModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
	
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
}

<br>
<h2>Edit Life Assured</h2>

<form method="POST">

	<input type="hidden" name="id" value="@Model.ChangeCollectionMethodInfo.id">

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">employee_number 1</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="Title" value="@Model.ChangeCollectionMethodInfo.employee_number1"  minlength="10" maxlength="10">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">employee_number 2</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="First_name" value="@Model.ChangeCollectionMethodInfo.employee_number2"  minlength="10" maxlength="10">	
		</div>
	</div>

	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/" role="button">Cancel</a>
		</div>
	</div>

</form>		