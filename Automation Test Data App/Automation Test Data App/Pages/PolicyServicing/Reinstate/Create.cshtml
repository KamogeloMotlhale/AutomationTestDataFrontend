@page
@model Automation_Test_Data_App.Pages.PolicyServicing.Reinstate.CreateModel
@{
}

@if(Model.errorMessage.Length > 0){
	<div class='alert alert-warning alert-dismissible fade show' role='alert'>
		<strong>@Model.errorMessage</strong>
		<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
	</div>
}
@if (Model.successMessage.Length > 0) {
	<div class="row mb-3">
		<div class="row mb-9">
			<div class='alert alert-success alert-dismissible fade show' role='alert'>
			<strong>@Model.successMessage</strong>
			<button type='button' class='btn-close' data-bs-dismiss='alert' arial-label='Close'></button>
			</div>
		</div>
	</div>
	}
<br>
<h2>Reinstate Policy</h2>


<form method="POST">
	

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Policy Number</label>
		<div class="col-sm-6">
			<input type="text" class="form-control" name="PolicyNo" value="@Model.ReinstateInfo.PolicyNo" minlength="10" maxlength="10">	
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">ReinstatementReason</label>
		<div class="col-sm-6">
		<select id='ReinstatementReason' class="form-control" name="ReinstatementReason" value="@Model.ReinstateInfo.ReinstatementReason">
		<option value=""></option>
		<option value="Back dated claim<">Back dated claim</option>
	   <option value="Bank details updated, not activated">Bank details updated, not activated</option>
	   <option value="Client request">Client request</option>
	   <option value="Conservation">Conservation</option>
	   <option value="Due to ill health">Due to ill health</option>
	   <option value="Error on collections">Error on collections</option>
	   <option value="Cooling off period">Cooling off period</option>
		</select>
		</div>
	</div>

	<div class="row mb-3">
		<label class="col-sm-3 col-form-label">Reinstatement Date</label>
		<div class="col-sm-6">
		<input type="date"  required pattern="\d{4}-\d{2}-\d{2}" class="form-control" name="ReinstatementDate" value="@Model.ReinstateInfo.ReinstatementDate">	
		</div>
	</div>


	


	<div class="row mb-3">
		<div class="offset-sm-3 col-sm-3 d-grid">
			<button type="submit" class="btn btn-primary">Submit</button>
		</div>
		<div class="col-sm-3 d-grid">
			<a class="btn btn-outline-primary" href="/policyServicing/Reinstate" role="button">Cancel</a>
		</div>
	</div>

</form>		
		
